<center>
  <% ['twitter', 'facebook', 'linkedin'].each do |provider| %>
    <a class="btn btn-social btn-<%= "#{provider}" %>" href="/users/auth/<%= "#{provider}" %>">
      <span class="fa fa-<%= "#{provider}" %>"></span>
      Sign in with <%= "#{provider.capitalize}" %>
    </a><br/><br/>
  <% end %>

  <a class="btn btn-social btn-google" href="/users/auth/google_oauth2">
    <span class="fa fa-google"></span>Sign in with Google
  </a><br/><br/>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to 'Forgot your password?', new_password_path(resource_name) %><br/><br/>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to 'Sign up', new_registration_path(resource_name) %><br/><br/>
  <% end -%>
</center>